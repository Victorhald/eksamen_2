---
const { header } = Astro.props;
const { data } = Astro.props;
---

<a href={`is/${data.slug}`}>
  <article class="produkt_liste">
    <div>
      <p>{data.name}</p>
      <img class="is_img" src={"/img/varianter/" + data.image} alt="is" />
    </div>
  </article>
</a>
<slot />

<style>
  .is_img {
    border-radius: 50%;
    height: 200px;
    width: 200px;
  }
  a:link {
    text-decoration: none;
  }

  @media (min-width: 600px) {
  }
</style>
