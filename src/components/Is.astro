---
import { quotelessJson } from "astro/zod";
import "../styles/style.css";

const { data } = Astro.props;
---

<a href={`is/${data.slug}`}>
  <article class="produkt_liste">
    <div class="produkt_div">
      <img class="is_img" src={"/img/varianter/" + data.image} alt="is" />
      <div class="allergy_img_container">
        <h4>{data.name}</h4>
        {data.allergyy && <img class="allergy" src={data.allergyy} alt="is" />}
      </div>
    </div>
  </article>
</a>
<slot />

<style>
  .is_img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    align-items: center;
  }
  .produkt_div:hover {
    transform: scale(1.2);
  }
  .allergy {
    height: 15px;
    width: 15px;
    margin-left: 10px;
  }
  .allergy_img_container {
    display: flex;
  }
  .produkt_div {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
  }
  a:link {
    text-decoration: none;
  }
  h4 {
    margin: auto;
    margin-bottom: 25px;
    font-size: 0.875rem;
  }
  @media (min-width: 768px) {
    h4 {
      font-size: 1.2rem;
    }
    .produkt_div {
      gap: 20px;
    }
    .is_img {
      width: 170px;
      height: 170px;
    }
  }

  @media (min-width: 500px) {
    .is_img {
      width: 190px;
      height: 190px;
    }
  }
  @media (min-width: 1024px) {
    .is_img {
      border-radius: 50%;
      width: 170px;
      height: 170px;
    }
    h4 {
      font-size: 1.5rem;
    }
    .produkt_div {
      gap: 10px;
    }
  }

  @media (min-width: 1200px) {
    .is_img {
      width: 200px;
      height: 200px;
    }
  }

  @media (min-width: 1300px) {
    .is_img {
      width: 220px;
      height: 220px;
    }
  }
</style>
