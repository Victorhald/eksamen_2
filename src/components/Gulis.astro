---
const { sizeandplace } = Astro.props;
---

<div class={sizeandplace} id="gulis_container">
  <div id="gulis_sprite"></div>
</div>

<style>
  #gulis_container {
    aspect-ratio: 73/121;
  }

  #gulis_sprite {
    background-image: url(/img/gulis.svg);
    background-size: cover;
    width: 100%;
    height: 100%;
  }

  .index {
    aspect-ratio: 73/121;
    width: 80px;
    position: absolute;
    bottom: 0px;
  }
  .coolbox {
    aspect-ratio: 73/121;
    width: 100px;
    position: absolute;
    bottom: 0px;
    left: 280px;
  }

  @media (min-width: 768px) {
    .index {
      width: 130px;
    }

    .coolbox {
      width: 130px;
      left: 600px;
    }
  }
  @media (min-width: 1024px) {
    .index {
      width: 200px;
    }

    .coolbox {
      width: 200px;
      left: 1100px;
    }
  }
</style>
