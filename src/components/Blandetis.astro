---
const { sizeandplace } = Astro.props;
---

<div class={sizeandplace} id="blandetis_container">
  <div id="blandetis_sprite"></div>
</div>

<style>
  #blandetis_container {
    aspect-ratio: 113/157;
  }

  #blandetis_sprite {
    background-image: url(/img/blandetis.svg);
    background-size: cover;
    width: 100%;
    height: 100%;
  }

  .index {
    position: absolute;
    width: 140px;
    left: 250px;
    top: 1540px;
  }

  .kontakt_os {
    position: absolute;
    width: 122px;
    left: 254px;
    top: 840px;
  }

  @media (min-width: 600px) {
    .index {
      width: 200px;
      top: 2360px;
      left: 1090px;
    }

    .kontakt_os {
      position: absolute;
      width: 200px;
      left: 1119px;
      top: 764px;
    }
  }
</style>
