---
const { sizeandplace } = Astro.props;
---

<div class={sizeandplace} id="blandetis_container">
  <div id="blandetis_sprite"></div>
</div>

<style>
  #blandetis_container {
    aspect-ratio: 113/157;
  }

  #blandetis_sprite {
    background-image: url(/img/blandetis.svg);
    background-size: cover;
    width: 100%;
    height: 100%;
  }

  .index {
    position: absolute;
    width: 130px;
    bottom: 0px;
    left: 700px;
  }

  .kontakt_os {
    position: absolute;
    width: 122px;
    bottom: 0px;
  }
  @media (min-width: 768px) {
    .index {
      width: 170px;
    }
  }
  @media (min-width: 1024px) {
    .index {
      width: 200px;
    }

    .kontakt_os {
      position: absolute;
      width: 200px;
      left: 1119px;
      top: 833px;
    }
  }
</style>
