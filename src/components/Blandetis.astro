---
const { sizeandplace } = Astro.props;
---

<div class={sizeandplace} id="blandetis_container">
  <div id="blandetis_sprite"></div>
</div>

<style>
  #blandetis_container {
    aspect-ratio: 113/157;
  }

  #blandetis_sprite {
    background-image: url(/img/blandetis.svg);
    background-size: cover;
    width: 100%;
    height: 100%;
  }

  .index {
    position: absolute;
    width: 130px;
    left: 259px;
    top: 1535px;
  }

  .kontakt_os {
    position: unset;
    width: 122px;
    margin-left: 254px;
    top: 840px;
  }
  @media (min-width: 768px) {
    .index {
      width: 170px;
      top: 1487px;
      left: 600px;
    }

    .kontakt_os {
      position: unset;
      width: 200px;
      margin-left: 500px;
    }
  }
  @media (min-width: 1024px) {
    .index {
      width: 200px;
      top: 2352px;
      left: 600px;
    }

    .kontakt_os {
      position: unset;
      width: 200px;
      margin-left: 1119px;
    }
  }
</style>
