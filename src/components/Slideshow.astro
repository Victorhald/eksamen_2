<div class="slideshow-container">
  <!-- Slides -->
  <div class="slide fade">
    <img src="img/david.webp" alt="Slide 1" />
  </div>

  <div class="slide fade">
    <img src="img/slide3.webp" alt="Slide 2" />
  </div>

  <div class="slide fade">
    <img src="img/slide2.webp" alt="Slide 3" />
  </div>

  <div class="slide fade">
    <img src="img/slide4.webp" alt="Slide 4" />
  </div>

  <div class="slide fade">
    <img src="img/slide5.webp" alt="Slide 5" />
  </div>

  <!-- Previous and next buttons -->
  <a class="prev" onclick="plusSlides(-1)"> <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="#ffff" d="M13.83 19a1 1 0 0 1-.78-.37l-4.83-6a1 1 0 0 1 0-1.27l5-6a1 1 0 0 1 1.54 1.28L10.29 12l4.32 5.36a1 1 0 0 1-.78 1.64"></path></svg></a>
  <a class="next" onclick="plusSlides(1)"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="#ffff" d="M10 19a1 1 0 0 1-.64-.23a1 1 0 0 1-.13-1.41L13.71 12L9.39 6.63a1 1 0 0 1 .15-1.41a1 1 0 0 1 1.46.15l4.83 6a1 1 0 0 1 0 1.27l-5 6A1 1 0 0 1 10 19"></path></svg></a>

  <style>
    .slideshow-container {
      position: relative;
      width: 300px;
      height: auto;
      max-width: 600px;
      margin: auto;
      margin-top: 90px;
      border-radius: 25px;
    }

    .slide {
      display: none;
      width: 100%;
    }

    .slide img {
      width: 100%;
      height: auto;
      border-radius: 25px;
    }

    .fade {
      animation-name: fade;
      animation-duration: 2.5s;
    }

    @keyframes fade {
      from {
        opacity: 1;
      }
      to {
        opacity: 1;
      }
    }

    .prev,
    .next {
      cursor: pointer;
      position: absolute;
      align-items: center;
      top: 50%;
      width: auto;
      margin-top: -22px;
      padding: 5px;
      color: white;
      font-size: 33px;
      transition: 0.6s ease;
      border-radius: 0 3px 3px 0;
      user-select: none;
      z-index: 100;
    }

    .prev {
      left: 0;
    }

    .next {
      right: 0;
    }

    .prev:hover,
    .next:hover {
      background-color: rgba(51, 51, 51, 0.51);
      scale: 1.1;
    }
  </style>

  <script type="module">
    document.addEventListener("DOMContentLoaded", function () {
      let slideIndex = 1;
      showSlides(slideIndex);

      function plusSlides(n) {
        showSlides((slideIndex += n));
      }

      function showSlides(n) {
        let i;
        let slides = document.getElementsByClassName("slide");
        if (n > slides.length) {
          slideIndex = 1;
        }
        if (n < 1) {
          slideIndex = slides.length;
        }
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        slides[slideIndex - 1].style.display = "block";
      }

      // TilfÃ¸j event listeners til knapperne
      document.querySelector(".prev").addEventListener("click", function () {
        plusSlides(-1);
      });

      document.querySelector(".next").addEventListener("click", function () {
        plusSlides(1);
      });
    });
  </script>
</div>
