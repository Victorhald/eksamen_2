---
const button_text = Astro.props.button_text;
const { variant, href, target } = Astro.props;
---

<a href={href} class={variant} target={target}>{button_text}</a>

<style>
  .orange {
    background-color: #e8a965;
    color: white;
    border: none;
    border-radius: 25px;
    height: 35px;
    padding: 0 20px;
    font-size: 0.86px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 0.75rem;
    font-family: "Margarine";
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s ease;
    letter-spacing: 0.8px;
  }
  .blaa {
    background-color: #12375b;
    color: white;
    border: none;
    border-radius: 25px;
    height: 35px;
    padding: 0 20px;
    font-size: 0.86px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 0.75rem;
    font-family: "Margarine";
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s ease;
    letter-spacing: 0.8px;
  }

  .back {
    color: #12375b;
    border-radius: 25px;
    height: 35px;
    padding: 0 20px;
    font-size: 0.86px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 0.75rem;
    font-family: "Margarine";
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s ease;
    letter-spacing: 0.8px;
    margin-left: 24px;
    margin-top: 40px;
    margin-bottom: 20px;
  }

  @media (min-width: 768px) {
    .orange,
    .blaa {
      font-size: 0.92rem;
    }
    .back {
      margin-left: 50px;
      font-size: 0.92rem;
    }
  }
  @media (min-width: 1024px) {
    .blaa,
    .orange,
    .back {
      height: 55px;
      font-size: 1rem;
    }
    .back {
      margin-left: 104px;
    }
    .orange:hover,
    .blaa:hover {
      transform: scale(1.2);
    }
  }
</style>
